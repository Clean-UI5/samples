{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": ["error", "always"],
    "arrow-parens": ["error", "always"],
    "max-params": ["error", 3],
    "complexity": ["error", 10],
    "max-statements": ["error", 10, { "ignoreTopLevelFunctions": true }],
    "max-depth": ["error", 4],
    "max-nested-callbacks": ["error", 4],
    "no-lone-blocks": "error",
    "no-nested-ternary": "error",
    "no-inner-declarations": "error",
    "no-loop-func": "error",
    "max-lines": ["error", { "max": 300, "skipBlankLines": true, "skipComments": true }],
    "prefer-rest-params": "error",
    "default-param-last": "error",
    "no-param-reassign": ["error", { "props": false }],
    "sap-usage-basemastercontroller": "error",
    "sap-cross-application-navigation": "error",
    "sap-forbidden-window-property": "error",
    "sap-message-toast": "error",
    "sap-no-absolute-component-path": "error",
    "sap-no-br-on-return": "error",
    "sap-no-dom-access": "error",
    "sap-no-dom-insertion": "error",
    "sap-no-dynamic-style-insertion": "error",
    "sap-no-element-creation": "error",
    "sap-no-encode-file-service": "error",
    "sap-no-exec-command": "error",
    "sap-no-global-define": "error",
    "sap-no-global-event": "error",
    "sap-no-global-selection": "error",
    "sap-no-global-variable": "error",
    "sap-no-hardcoded-color": "error",
    "sap-no-hardcoded-url": "error",
    "sap-no-history-manipulation": "error",
    "sap-no-jquery-device-api": "error",
    "sap-no-localhost": "error",
    "sap-no-localstorage": "error",
    "sap-no-location-reload": "error",
    "sap-no-location-usage": "error",
    "sap-no-navigator": "error",
    "sap-no-override-rendering": "error",
    "sap-no-override-storage-prototype": "error",
    "sap-no-proprietary-browser-api": "error",
    "sap-no-sessionstorage": "error",
    "sap-no-ui5base-prop": "error",
    "sap-no-ui5-prop-warning": "error",
    "sap-timeout-usage": "error",
    "sap-ui5-no-private-prop": "error",
    "clean-ui5-no-module-extra": "error",
    "clean-ui5-fan-out": ["error", 7]
  },
  "globals": {
    "sap": false,
    "QUnit": false
  }
}
