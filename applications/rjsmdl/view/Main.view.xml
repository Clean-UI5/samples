<mvc:View
  controllerName="samples.applications.rjsmdl.controller.Main"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core"
  displayBlock="true"
>
  <App>
    <pages>
      <Page id="page" title="{i18n>app.title}">
        <content>
          <VBox>
            <f:SimpleForm
              layout="ResponsiveGridLayout"
              labelSpanXL="3"
              labelSpanL="3"
              labelSpanM="3"
              labelSpanS="12"
              emptySpanXL="4"
              emptySpanL="4"
              emptySpanM="4"
              emptySpanS="0"
              columnsXL="1"
              columnsL="1"
              columnsM="1"
            >
              <f:content>
                <Label text="Name (defaulted if not changed)" />
                <Input value="{/name}" />
                <Label text="Year" />
                <Select selectedKey="{/year}">
                  <core:Item key="2022" text="2022" />
                  <core:Item key="2023" text="2023" />
                  <core:Item key="2024" text="2024" />
                  <core:Item key="2025" text="2025" />
                  <core:Item key="2026" text="2026" />
                </Select>    
                <Label text="Organization" />
                <Input value="{/org}"/>
              </f:content>
            </f:SimpleForm>
          </VBox>
        </content>
        <footer>
          <OverflowToolbar>
            <ToolbarSpacer/>
            <Button text="Save" type="Accept" press="onSave" />
          </OverflowToolbar>
        </footer>
      </Page>
    </pages>
  </App>
</mvc:View>
