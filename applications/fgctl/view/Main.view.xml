<mvc:View
  controllerName="samples.applications.fgctl.controller.Main"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:custom="samples.applications.fgctl.control"
  displayBlock="true"
>
  <App>
    <pages>
      <Page id="page">
        <customHeader>
          <Toolbar>
            <Title text="{i18n>app.title}" />
            <Button text="{i18n>btn.reset}" press="onReset" />
            <Button text="{i18n>btn.inc}" press="onIncrement" />
            <Button text="{i18n>btn.dec}" press="onDecrement" />
          </Toolbar>
        </customHeader>
        <VBox>
          <custom:MyControl
            id="firstControl"
            label="{i18n>firstControl.label}"
            value="{/firstValue}"
            change="onFirstValueChange"
          />
          <custom:MyControl
            id="secondControl"
            label="{i18n>secondControl.label}"
            value="{/secondValue}"
            change="onSecondValueChange"
          />
        </VBox>
      </Page>
    </pages>
  </App>
</mvc:View>
