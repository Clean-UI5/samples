<core:FragmentDefinition
  xmlns:core="sap.ui.core"
  xmlns="sap.m"
  xmlns:f="sap.ui.layout.form"
>
  <VBox>
    <f:SimpleForm
      layout="ResponsiveGridLayout"
      labelSpanXL="3"
      labelSpanL="3"
      labelSpanM="3"
      labelSpanS="12"
      adjustLabelSpan="false"
      emptySpanXL="4"
      emptySpanL="4"
      emptySpanM="4"
      emptySpanS="0"
      columnsXL="1"
      columnsL="1"
      columnsM="1"
      singleContainerFullSize="false"  
    >
      <f:content>
        <Label text="{$this>/label}" />
        <Input value="{$this>/value}" type="Number" change="_onChange" showClearIcon="true" />
      </f:content>
    </f:SimpleForm>
  </VBox>
</core:FragmentDefinition>
